
<% if @plant.errors.any?  %>
    <% @plant.errors.full_messages.each do |m| %>
        <div class="notification is-success is-light">
  <button class="delete"></button>
  <%=  m %>
</div>
    <% end %>
<% end %>
</div>



<div class= "form">
<%= form_for @plant do |f| %>
    <%= f.hidden_field :garden_id, value: "#{current_user.garden.id}" %>
    <%= f.label :plant%>
    <%= f.text_field :plant_type %> 
    <br>
    <%= f.label :nickname%>
    <%= f.text_field :nickname %> 
    <br>
    <%= f.label :size_in_inches%>
    <%= f.number_field :size %> inch
    <br>
    <%= f.label :amount_of_water%>
    <%= f.number_field :water_ammount %> cup
    <br>
    <br>
    <%= f.submit "Plant Seed" %>
<% end %>
</div>